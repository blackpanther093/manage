# Production Environment Variables Template
# Copy this to .env and fill in your actual values

# Environment
FLASK_ENV=production

# Security - CRITICAL: Generate a strong secret key
SECRET_KEY=your-super-strong-secret-key-here-minimum-32-characters

# Database Configuration - Production Database
DB_HOST=your-production-db-host
DB_USER=your-production-db-user
DB_PASSWORD=your-strong-db-password
DB_NAME=mess_management_prod
DB_PORT=3306
DB_SSL_DISABLED=false
DB_SSL_VERIFY_CERT=true

# Database Connection Pooling
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis for Rate Limiting (Production)
REDIS_URL=redis://your-redis-host:6379/0

# Email Configuration - Production SMTP
MAIL_SERVER=smtp.your-domain.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# AI Integration (Optional)
GROQ_API_KEY=your-production-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Logging
LOG_FILE=/var/log/manageit/app.log
LOG_LEVEL=WARNING

# Application Settings
PORT=8000
